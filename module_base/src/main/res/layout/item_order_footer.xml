<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dimen_16dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_12dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp">
        <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14sp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/dark_gray"/>


        <LinearLayout
                android:id="@+id/ll_order_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_12dp">

            <TextView
                    android:id="@+id/tv_invoice_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_yellow_storke_btn"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:paddingTop="@dimen/dimen_6dp"
                    android:paddingBottom="@dimen/dimen_6dp"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:textColor="@color/invoice_color"
                    android:textSize="@dimen/font_12sp"
                    android:text="上传发票"/>

            <TextView
                    android:id="@+id/tv_order_deal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_corner"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:paddingTop="@dimen/dimen_6dp"
                    android:paddingBottom="@dimen/dimen_6dp"
                    android:textSize="@dimen/font_12sp"
                    android:layout_marginLeft="@dimen/dimen_12dp"/>

            <TextView
                    android:id="@+id/tv_order_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_blue_storke_btn"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:paddingTop="@dimen/dimen_6dp"
                    android:paddingBottom="@dimen/dimen_6dp"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:textColor="@color/bottom_tab_text_color"
                    android:textSize="@dimen/font_12sp"/>

        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/divider_item"/>
</LinearLayout>