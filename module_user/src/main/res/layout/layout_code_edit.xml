<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="viewmodel" type="com.meditrust.moudle_user.viewmodel.LoginViewModel"/>
        <variable name="view" type="android.view.View"/>
    </data>

    <LinearLayout
            android:id="@+id/ll_smscode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_marginLeft="@dimen/dimen_16dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp">
            <TextView
                    android:id="@+id/iv_login_sms"
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机号"
                    android:textSize="@dimen/font_16sp"/>

            <EditText
                    android:id="@+id/et_phone_sms"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:background="@null"
                    android:hint="@string/input_phone_num"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColorHint="@color/alter_drug_color"
                    android:textSize="@dimen/font_14sp"
                    android:layout_toRightOf="@id/iv_login_sms"/>

        </RelativeLayout>

        <include layout="@layout/divider_line"/>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp">
            <TextView
                    android:id="@+id/iv_sms_code"
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="验证码"
                    android:textSize="@dimen/font_16sp"/>
            <EditText
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:background="@null"
                    android:hint="@string/input_verification"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="@dimen/font_14sp"
                    android:textColorHint="@color/alter_drug_color"
                    android:layout_toRightOf="@+id/iv_sms_code"/>

            <TextView
                    android:id="@+id/btn_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dimen_8dp"
                    android:gravity="center"
                    android:textColor="@{viewmodel.mCodeTextColor ? @color/light_gray : @color/bottom_tab_text_color}"
                    android:background="@{viewmodel.mCodeTextColor ? @drawable/bg_sms_code : @drawable/bg_blue_storke_btn}"
                    android:clickable="@{viewmodel.mCodeClickAble}"
                    android:text="@{viewmodel.mCodeText}"
                    android:onClick="getCode"/>
        </RelativeLayout>
        <include layout="@layout/divider_line"/>

        <TextView
                android:id="@+id/tv_login_code_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:text="@string/login_password"
                android:padding="@dimen/dimen_4dp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:onClick="switchPwd"/>

        <Button
                android:id="@+id/btn_code_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="@string/login_in"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_16sp"
                android:background="@drawable/bg_blue_btn"
                android:onClick="loginCode"/>
    </LinearLayout>
</layout>
