<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
                name="viewmodel"
                type="com.meditrust.module_drug.workroom.detail.RecruitDetailViewModel" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include
                android:id="@+id/include"
                layout="@layout/layout_toolbar" />

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".workroom.detail.RecruitDetailActivity">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <com.meditrust.module_base.view.X5WebView
                        android:id="@+id/web_recruit_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                </com.meditrust.module_base.view.X5WebView>

                <LinearLayout
                        android:id="@+id/ll_bottom_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                    <ImageView
                            android:id="@+id/iv_recruit_qrcode"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/dimen_16dp" />

                    <TextView
                            android:id="@+id/tv_recruit_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/dimen_12dp"
                            android:text="@{viewmodel.mRecruitText}"
                            android:textColor="@color/middle_gray"
                            android:textSize="@dimen/font_14sp" />

                    <LinearLayout
                            android:id="@+id/ll_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="@{viewmodel.mBottomTypeLiveData?View.VISIBLE : View.GONE}">

                        <LinearLayout
                                android:id="@+id/ll_bottom_recruit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_16dp"
                                android:orientation="horizontal"
                                android:visibility="@{viewmodel.mBottomLiveData?View.VISIBLE : View.GONE}">

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/line_height"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@color/divider_line_color"></View>

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_12dp"
                                    android:layout_marginRight="@dimen/dimen_12dp"
                                    android:layout_weight="0.8"
                                    android:gravity="center"
                                    android:text="通过其他方式完成招募"
                                    android:textColor="@color/light_gray"
                                    android:textSize="@dimen/font_12sp" />

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/line_height"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@color/divider_line_color"></View>
                        </LinearLayout>

                        <ImageView
                                android:id="@+id/iv_write_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dimen_16dp"
                                android:visibility="@{viewmodel.mBottomLiveData?View.VISIBLE : View.GONE}"
                                app:srcCompat="@drawable/icon_write" />

                        <TextView
                                android:id="@+id/tv_quest_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dimen_8dp"
                                android:layout_marginBottom="@dimen/dimen_24dp"
                                android:gravity="center"
                                android:text="@{viewmodel.mQuestInfo}"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/font_14sp"
                                android:visibility="@{viewmodel.mBottomLiveData?View.VISIBLE : View.GONE}" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>
