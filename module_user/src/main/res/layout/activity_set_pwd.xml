<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable name="viewmodel" type="com.meditrust.moudle_user.viewmodel.SetPwdViewModel"/>
        <variable name="view" type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.SetPwdActivity"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp">

        <include layout="@layout/layout_toolbar"
                 app:layout_constraintBottom_toTopOf="@+id/iv_logo"
                 android:id="@+id/include"/>

        <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                app:srcCompat="@drawable/icon_app_logo"
                android:layout_marginTop="@dimen/dimen_64dp"
                app:layout_constraintTop_toBottomOf="@+id/include"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_marginTop="@dimen/dimen_64dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_logo" android:id="@+id/relativeLayout">

            <TextView
                    android:id="@+id/tv_login_password"
                    android:layout_width="@dimen/dimen_64dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="新密码"
                    android:textSize="@dimen/font_16sp"/>

            <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:background="@null"
                    android:hint="@string/input_new_password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textSize="@dimen/font_14sp"
                    android:textColorHint="@color/alter_drug_color"
                    android:layout_toRightOf="@+id/tv_login_password"/>
        </RelativeLayout>

        <include layout="@layout/divider_line"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:id="@+id/relativeLayout2"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout"
        >

            <TextView
                    android:id="@+id/tv_confirm_password"
                    android:layout_width="@dimen/dimen_64dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="确认密码"
                    android:textSize="@dimen/font_16sp"/>

            <EditText
                    android:id="@+id/et_again_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:hint="@string/input_again_password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textSize="@dimen/font_14sp"
                    android:textColorHint="@color/alter_drug_color"
                    android:layout_toRightOf="@+id/tv_confirm_password"/>
        </RelativeLayout>


        <Button
                android:id="@+id/btn_set_pwd_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/next_step"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_16sp"
                android:background="@drawable/bg_blue_btn"
                android:layout_marginTop="@dimen/dimen_48dp"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout2"
                android:onClick="savePwd"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
