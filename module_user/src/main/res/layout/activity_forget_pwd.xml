<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="viewmodel" type="com.meditrust.moudle_user.viewmodel.ForgetPwdViewModel"/>
        <variable name="view" type="android.view.View"/>
    </data>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.ForgetPwdActivity"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp">

        <include layout="@layout/layout_toolbar"
                 android:id="@+id/include"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                app:srcCompat="@drawable/icon_app_logo"
                android:layout_marginTop="@dimen/dimen_64dp"
                android:layout_marginBottom="@dimen/dimen_64dp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_marginTop="@dimen/dimen_20dp">

            <TextView
                    android:id="@+id/iv_login_phone"
                    android:layout_width="@dimen/dimen_64dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机号"
                    android:textSize="@dimen/font_16sp"/>

            <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:background="@null"
                    android:hint="@string/input_phone_num"
                    android:textSize="@dimen/font_14sp"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColorHint="@color/alter_drug_color"
                    android:layout_toRightOf="@+id/iv_login_phone"/>

        </RelativeLayout>

        <include layout="@layout/divider_line"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp">

            <TextView
                    android:id="@+id/tv_login_password"
                    android:layout_width="@dimen/dimen_64dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="新密码"
                    android:textSize="@dimen/font_16sp"/>

            <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:background="@null"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textSize="@dimen/font_14sp"
                    android:textColorHint="@color/alter_drug_color"
                    android:layout_toRightOf="@+id/tv_login_password"/>
            <CheckBox
                    android:id="@+id/cb_password_show"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="@dimen/dimen_8dp"
                    android:button="@drawable/pwd_show_or_hide"
                    android:checked="false"/>
        </RelativeLayout>

        <include layout="@layout/divider_line"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp">

            <TextView
                    android:id="@+id/tv_confirm_password"
                    android:layout_width="@dimen/dimen_64dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="确认密码"
                    android:textSize="@dimen/font_16sp"/>

            <EditText
                    android:id="@+id/et_again_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:background="@null"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textSize="@dimen/font_14sp"
                    android:textColorHint="@color/alter_drug_color"
                    android:layout_toRightOf="@+id/tv_confirm_password"/>
            <CheckBox
                    android:id="@+id/cb_forget_password_show"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="@dimen/dimen_8dp"
                    android:button="@drawable/pwd_show_or_hide"
                    android:checked="false"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp">
            <TextView
                    android:id="@+id/iv_sms_code"
                    android:layout_width="@dimen/dimen_64dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="验证码"
                    android:textSize="@dimen/font_16sp"/>
            <EditText
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:background="@null"
                    android:hint="@string/input_verification"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="@dimen/font_14sp"
                    android:textColorHint="@color/alter_drug_color"
                    android:layout_toRightOf="@+id/iv_sms_code"/>

            <TextView
                    android:id="@+id/btn_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dimen_8dp"
                    android:gravity="center"
                    android:textColor="@{viewmodel.mCodeTextColor ? @color/light_gray : @color/bottom_tab_text_color}"
                    android:background="@{viewmodel.mCodeTextColor ? @drawable/bg_sms_code : @drawable/bg_blue_storke_btn}"
                    android:clickable="@{viewmodel.mCodeClickAble}"
                    android:text="@{viewmodel.mCodeText}"
                    android:onClick="getCode"/>
        </RelativeLayout>
        <include layout="@layout/divider_line"/>

        <Button
                android:id="@+id/btn_reset_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_36dp"
                android:text="确认"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_16sp"
                android:background="@drawable/bg_blue_btn"
                android:onClick="editPwd"/>

    </LinearLayout>
</layout>
