<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewmodel" type="com.meditrust.moudle_user.viewmodel.LoginViewModel"/>
        <variable name="view" type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.LoginActivity"
            android:fitsSystemWindows="true">

        <include layout="@layout/layout_toolbar"
                 app:layout_constraintBottom_toTopOf="@+id/imageView"
                 android:id="@+id/include"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                app:srcCompat="@drawable/icon_app_logo"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="@dimen/dimen_64dp"
                app:layout_constraintTop_toBottomOf="@id/include"
                app:layout_constraintHorizontal_bias="0.5"
                android:id="@+id/imageView"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_48dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView">
            <include layout="@layout/layout_code_edit" bind:viewmodel="@{viewmodel}"
                     android:id="@+id/ll_code_edit"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     app:layout_constraintEnd_toEndOf="parent"
                     android:layout_marginEnd="16dp"
                     app:layout_constraintStart_toStartOf="parent"
                     android:layout_marginStart="16dp"/>

            <include layout="@layout/layout_pwd_edit" bind:viewmodel="@{viewmodel}"
                     android:id="@+id/ll_pwd_edit"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     app:layout_constraintEnd_toEndOf="parent"
                     android:layout_marginEnd="16dp"
                     app:layout_constraintStart_toStartOf="parent"
                     android:layout_marginStart="16dp"/>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/ll_protol"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/ll_protol"
                android:id="@+id/linearLayout2">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击登录即表示同意"
                    android:textSize="@dimen/font_14sp"
                    android:textColor="@color/dark_gray"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"/>

            <TextView
                    android:id="@+id/tv_legal_protol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册法律风险提示、"
                    android:textSize="@dimen/font_14sp"
                    android:textColor="@color/bottom_tab_text_color"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:onClick="@{viewmodel::startLegalProtol}"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_protol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dimen_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="0dp">

            <TextView
                    android:id="@+id/tv_register_protol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平台注册协议、"
                    android:textSize="@dimen/font_14sp"
                    android:textColor="@color/bottom_tab_text_color"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:onClick="@{viewmodel::startRegisterProtol}"/>

            <TextView
                    android:id="@+id/tv_service_protol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平台服务协议、"
                    android:textSize="@dimen/font_14sp"
                    android:textColor="@color/bottom_tab_text_color"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:onClick="@{viewmodel::startServiceProtol}"/>
            <TextView
                    android:id="@+id/tv_privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隐私政策"
                    android:textSize="@dimen/font_14sp"
                    android:textColor="@color/bottom_tab_text_color"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:onClick="@{viewmodel::startPrivacyPolicy}"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
