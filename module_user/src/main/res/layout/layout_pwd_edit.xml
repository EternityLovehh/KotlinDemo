<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="viewmodel" type="com.meditrust.moudle_user.viewmodel.LoginViewModel"/>
    </data>

    <LinearLayout
            android:id="@+id/ll_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:visibility="gone">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp">

            <TextView
                    android:id="@+id/iv_login_phone"
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机号"
                    android:textSize="@dimen/font_16sp"/>

            <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:background="@null"
                    android:hint="@string/input_phone_num"
                    android:textSize="@dimen/font_14sp"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColorHint="@color/alter_drug_color"
                    android:layout_toRightOf="@+id/iv_login_phone"/>

        </RelativeLayout>

        <include layout="@layout/divider_line"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp">

            <TextView
                    android:id="@+id/iv_login_password"
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="密码"
                    android:textSize="@dimen/font_16sp"/>

            <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:background="@null"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textSize="@dimen/font_14sp"
                    android:textColorHint="@color/alter_drug_color"
                    android:layout_toRightOf="@+id/iv_login_password"/>
            <CheckBox
                    android:id="@+id/iv_password_show"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="@dimen/dimen_8dp"
                    android:button="@drawable/pwd_show_or_hide"
                    android:checked="false"
                    android:onCheckedChanged="@{viewmodel::onPwdCheckChanged}"/>
        </RelativeLayout>

        <include layout="@layout/divider_line"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_login_pwd_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_4dp"
                    android:gravity="center"
                    android:text="@string/login_code"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:onClick="switchCode"/>

            <TextView
                    android:id="@+id/tv_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@string/forget_password"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:onClick="@{viewmodel::forgetPwd}"/>
        </RelativeLayout>

        <Button
                android:id="@+id/btn_pwd_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="@string/login_in"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_16sp"
                android:background="@drawable/bg_blue_btn"
                android:onClick="loginPwd"/>
    </LinearLayout>
</layout>
