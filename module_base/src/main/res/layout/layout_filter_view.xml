<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="view"
                type="android.view.View" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/ll_switch_spec"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16dp">

                <TextView
                        android:id="@+id/tv_filter_specy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="药品种类" />

                <ImageView
                        android:id="@+id/iv_filter_specy"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:src="@mipmap/icon_arrow_down" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_switch_price"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16dp">

                <TextView
                        android:id="@+id/tv_filter_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="价格" />

                <ImageView
                        android:id="@+id/iv_filter_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:src="@mipmap/icon_arrow_down" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_filter_history"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dimen_16dp"
                    android:visibility="gone">

                <View
                        android:layout_width="@dimen/line_height"
                        android:layout_height="@dimen/dimen_16dp"
                        android:background="@color/divider_line_color" />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_12dp"
                        app:srcCompat="@drawable/icon_drug_history" />

                <TextView
                        android:id="@+id/tv_filter_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_8dp"
                        android:text="@string/drug_up_history" />

            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/divider_line" />
    </LinearLayout>
</layout>
