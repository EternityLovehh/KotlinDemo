<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="bean"
                type="com.meditrust.module_drug.model.RecruitModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_16dp">

        <ImageView
                android:id="@+id/iv_recruit"
                android:layout_width="@dimen/dimen_72dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:imageUrl="@{bean.thumbnail}" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_8dp">

            <TextView
                    android:id="@+id/tv_recruit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:text="@{bean.title}"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/font_14sp" />

            <TextView
                    android:id="@+id/tv_recruit_integral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/bottom_tab_text_color"
                    android:textSize="@dimen/font_12sp" />

            <TextView
                    android:id="@+id/tv_recruit_dsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{bean.introduction}"
                    android:textColor="@color/middle_gray"
                    android:textSize="@dimen/font_12sp" />
        </LinearLayout>

    </LinearLayout>
</layout>