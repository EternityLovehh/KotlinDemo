<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="bean"
                type="com.meditrust.module_drug.model.DrugModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_16dp">

        <ImageView
                android:id="@+id/iv_drug_list_avator"
                android:layout_width="@dimen/dimen_64dp"
                android:layout_height="@dimen/dimen_64dp"
                android:layout_centerVertical="true"
                app:imageUrl="@{bean.drugImageUrl}" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_toRightOf="@id/iv_drug_list_avator"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_drug_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_8dp"
                        android:text="@{@string/drug_name + bean.drugName}"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/font_14sp" />

                <TextView
                        android:id="@+id/tv_drug_alter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_not_found_pm"
                        android:text="@string/drug_alter"
                        android:textColor="@color/middle_gray"
                        android:textSize="@dimen/font_12sp" />
            </RelativeLayout>

            <TextView
                    android:id="@+id/tv_drug_cname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:text="@{@string/drug_commonname + bean.drugCommonName}"
                    android:textColor="@color/middle_gray"
                    android:textSize="@dimen/font_12sp" />

            <TextView
                    android:id="@+id/tv_drug_specifice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:text="@{@string/drug_spec + bean.drugSpec}"
                    android:textColor="@color/middle_gray"
                    android:textSize="@dimen/font_12sp" />

            <TextView
                    android:id="@+id/tv_drug_manufature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:text="@{@string/drug_manu + bean.drugManufacturer}"
                    android:textColor="@color/middle_gray"
                    android:textSize="@dimen/font_12sp" />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_drug_repertory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/drug_stockqty + bean.commodityStockQty}"
                        android:textColor="@color/middle_gray"
                        android:textSize="@dimen/font_12sp" />

                <TextView
                        android:id="@+id/tv_drug_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="@{@string/drug_price + bean.commodityPrice}"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/font_12sp" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>
