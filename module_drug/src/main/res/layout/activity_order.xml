<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewmodel"
                type="com.meditrust.module_drug.order.OrderViewModel" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".order.OrderActivity">

        <include
                android:id="@+id/include"
                layout="@layout/layout_toolbar" />

        <include
                android:id="@+id/check_button"
                layout="@layout/layout_title_tab"
                app:viewmodel="@{viewmodel}" />

        <include layout="@layout/divider_line" />

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tl_order"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:minHeight="?attr/actionBarSize"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/bottom_tab_text_color"
                app:tabMode="fixed"
                app:tabPaddingTop="@dimen/dimen_4dp"
                app:tabSelectedTextColor="@color/bottom_tab_text_color"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                app:tabTextColor="@color/text_gray"></com.google.android.material.tabs.TabLayout>

        <include layout="@layout/divider_line" />

        <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>

            <LinearLayout
                    android:id="@+id/ll_my_audit_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/icon_order_tips" />

                <TextView
                        android:id="@+id/tv_my_audit_order"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_100dp"
                        android:background="@drawable/bg_left_corner_blue"
                        android:ems="1"
                        android:gravity="center"
                        android:padding="@dimen/dimen_4dp"
                        android:text="我审核的订单"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_12sp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</layout>
