<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.GuideActivity">
    <data>
        <variable name="viewmodel" type="com.meditrust.moudle_user.viewmodel.GuideViewModel"/>
        <variable name="view" type="android.view.View"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_guide"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </androidx.viewpager2.widget.ViewPager2>

        <com.meditrust.module_base.view.UIndicator
                android:id="@+id/ui_indicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_6dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="@dimen/dimen_56dp"
                app:circle_circle_radius="@dimen/dimen_4dp"
                app:normal_color="@color/btn_unable_blue_color"
                app:selected_color="@color/bottom_tab_text_color"
                app:spacing="@dimen/dimen_12dp"
                app:style="circle_circle"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        <TextView
                android:id="@+id/tv_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_app_logo"
                android:visibility="gone"
                android:text="进入首页"
                android:textSize="@dimen/font_16sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dimen_64dp"
                android:paddingLeft="@dimen/dimen_16dp"
                android:paddingRight="@dimen/dimen_16dp"
                android:paddingTop="@dimen/dimen_8dp"
                android:paddingBottom="@dimen/dimen_8dp"
                android:background="@drawable/bg_blue_solid_btn"
                android:onClick="@{viewmodel::startMain}"/>
    </RelativeLayout>
</layout>