<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable name="viewmodel" type="com.meditrust.moudle_user.viewmodel.NickNameViewModel"/>
        <variable name="view" type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            tools:context=".ui.NickNameActivity">

        <include layout="@layout/layout_toolbar"
                 app:layout_constraintBottom_toTopOf="@+id/et_nick_name"
                 android:id="@+id/include"/>

        <EditText
                android:id="@+id/et_nick_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_marginTop="@dimen/dimen_64dp"
                android:hint="@string/input_regular_name"
                android:maxLength="16"
                android:textSize="@dimen/font_14sp"
                android:background="@null"
                android:textColorHint="@color/alter_drug_color"
                app:layout_constraintTop_toBottomOf="@+id/include"/>

        <include layout="@layout/divider_line"/>

        <Button
                android:id="@+id/btn_set_pwd_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_48dp"
                android:text="@string/set_complete"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_16sp"
                android:background="@drawable/bg_blue_btn"
                app:layout_constraintTop_toBottomOf="@+id/et_nick_name"
                android:onClick="saveNickName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
