<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
                name="bean"
                type="com.meditrust.module_drug.model.OrderFootModel" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_12dp">

            <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@{@string/total_price + bean.actualAmount}"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/font_14sp" />


            <LinearLayout
                    android:id="@+id/ll_order_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dimen_12dp">

                <TextView
                        android:id="@+id/tv_invoice_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_12dp"
                        android:background="@drawable/bg_yellow_storke_btn"
                        android:paddingLeft="@dimen/dimen_12dp"
                        android:paddingTop="@dimen/dimen_6dp"
                        android:paddingRight="@dimen/dimen_12dp"
                        android:paddingBottom="@dimen/dimen_6dp"
                        android:text="上传发票"
                        android:textColor="@color/invoice_color"
                        android:textSize="@dimen/font_12sp"
                        android:visibility="@{TextUtils.isEmpty(bean.resultsBean.remark3) ? View.GONE : View.VISIBLE}" />

                <TextView
                        android:id="@+id/tv_order_deal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_12dp"
                        android:paddingLeft="@dimen/dimen_12dp"
                        android:paddingTop="@dimen/dimen_6dp"
                        android:paddingRight="@dimen/dimen_12dp"
                        android:paddingBottom="@dimen/dimen_6dp"
                        android:textSize="@dimen/font_12sp" />

                <TextView
                        android:id="@+id/tv_order_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_12dp"
                        android:paddingLeft="@dimen/dimen_12dp"
                        android:paddingTop="@dimen/dimen_6dp"
                        android:paddingRight="@dimen/dimen_12dp"
                        android:paddingBottom="@dimen/dimen_6dp"
                        android:textColor="@color/bottom_tab_text_color"
                        android:textSize="@dimen/font_12sp" />

            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/divider_item" />
    </LinearLayout>
</layout>
